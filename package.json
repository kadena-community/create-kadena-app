{
  "name": "@kadena/create-kadena-app",
  "version": "0.1.0",
  "description": "CLI tool to create a starter project with @kadena/client integration",
  "repository": {
    "type": "git",
    "url": "https://github.com/kadena-community/kadena.js.git",
    "directory": "packages/tools/create-kadena-app"
  },
  "license": "ISC",
  "bin": {
    "create-kadena-app": "lib/index.js"
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier config src templates --write",
    "lint": "eslint ./src --ext .js,.ts --fix",
    "start": "ts-node --transpile-only src/index.ts",
    "test": "rimraf test-* && heft test && cross-env NG_CLI_ANALYTICS=false ./scripts/generate-test.sh"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "cross-fetch": "~4.0.0",
    "cross-spawn": "~7.0.3",
    "yaml": "~2.3.3"
  },
  "devDependencies": {
    "@kadena-dev/eslint-config": "~1.0.0",
    "@kadena-dev/heft-rig": "~0.1.0",
    "@rushstack/eslint-config": "~3.4.1",
    "@rushstack/heft": "~0.63.0",
    "@types/cross-spawn": "~6.0.4",
    "@types/debug": "~4.1.10",
    "@types/heft-jest": "~1.0.5",
    "@types/mkdirp": "~2.0.0",
    "@types/node": "^20.8.9",
    "@types/rimraf": "~3.0.2",
    "cross-env": "~7.0.3",
    "eslint": "^8.52.0",
    "prettier": "~3.0.3",
    "rimraf": "~5.0.5",
    "ts-node": "~10.9.1",
    "typescript": "^5.2.2"
  }
}
